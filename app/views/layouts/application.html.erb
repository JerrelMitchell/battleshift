<!DOCTYPE html>
<html>
  <head>
    <title>BattleshipWeb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if !current_user %>
      <% render 'layouts/nav' %>
      <%= yield :visitor %>
    <% else %>
      <% render 'layouts/nav' %>
      <%= yield :user %>
    <% end %>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
  <% end %>
    <%= yield %>
  </body>
</html>
